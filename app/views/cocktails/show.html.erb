<div class="container">

  <h2 class="detail-page"><%= @cocktail.name %></h2>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
        </li>
    <% end %>
  </ul>

<%= link_to "add Dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Add Pic", new_cocktail_dose_path(@cocktail) %>
<%= link_to "back to menu", cocktails_path  %>

</div>
